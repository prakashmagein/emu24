<?xml version="1.0"?>
<!-- Declarative schema for credit limit reports table -->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="emu24_creditlimit_report" resource="default" engine="innodb" comment="Credit Limit Reports">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="int" name="customer_id" padding="10" unsigned="true" nullable="false" comment="Customer ID"/>
        <column xsi:type="text" name="regno" nullable="false" length="255" comment="Registration Number"/>
        <column xsi:type="text" name="company_id" nullable="true" length="255" comment="Company ID"/>
        <column xsi:type="text" name="company_name" nullable="true" length="255" comment="Company Name"/>
        <column xsi:type="decimal" name="credit_limit_amount" nullable="true" precision="20" scale="4" comment="Credit Limit Amount"/>
        <column xsi:type="text" name="credit_limit_currency" nullable="true" length="8" comment="Credit Limit Currency"/>
        <column xsi:type="text" name="credit_score_value" nullable="true" length="32" comment="Credit Score Value"/>
        <column xsi:type="text" name="credit_score_description" nullable="true" comment="Credit Score Description"/>
        <column xsi:type="text" name="payload" nullable="true" length="2097152" comment="Full Response Payload"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="false" comment="Created At"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <constraint xsi:type="foreign" referenceId="EMU24_CREDITLIMIT_REPORT_CUSTOMER_ID_CUSTOMER_ENTITY_ENTITY_ID"
                    table="emu24_creditlimit_report" column="customer_id"
                    referenceTable="customer_entity" referenceColumn="entity_id"
                    onDelete="CASCADE"/>
        <index referenceId="EMU24_CREDITLIMIT_REPORT_CUSTOMER_ID">
            <column name="customer_id"/>
        </index>
    </table>
</config>
