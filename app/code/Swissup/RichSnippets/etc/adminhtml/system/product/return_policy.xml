<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="return_policy" translate="label comment" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
        <label>Merchant Return Policy</label>
        <comment><![CDATA[The following properties apply to merchant listing experiences.]]></comment>
        <field id="country" translate="label comment" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Country that the return policy applies to</label>
            <comment>Use the two-letter ISO 3166-1 alpha-2 country code formatting. You can specify up to 50 countries. Comma-separated</comment>
        </field>
        <field id="category" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Policy category</label>
            <source_model>Swissup\RichSnippets\Model\Config\Source\MerchantReturnCategory</source_model>
        </field>
        <field id="return_days" translate="label comment" type="text" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Days from delivery return is possible</label>
            <comment>The number of days from the delivery date that a product can be returned.</comment>
            <depends>
                <field id="category">FiniteReturnWindow</field>
            </depends>
        </field>
        <field id="method" translate="label comment" type="select" sortOrder="30" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Return Method</label>
            <source_model>Swissup\RichSnippets\Model\Config\Source\MerchantReturnMethod</source_model>
            <depends>
                <field id="category" separator=",">FiniteReturnWindow,UnlimitedWindow</field>
            </depends>
        </field>
        <field id="no_fee" translate="label" type="select" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Return is free</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <depends>
                <field id="category" separator=",">FiniteReturnWindow,UnlimitedWindow</field>
            </depends>
        </field>
        <field id="shipping_fees" translate="label comment" type="text" sortOrder="50" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Shipping cost to return product</label>
            <comment>Can be single amount or amount range (use hyphen "-") in your store currency.</comment>
            <depends>
                <field id="category" separator=",">FiniteReturnWindow,UnlimitedWindow</field>
                <field id="no_fee">0</field>
            </depends>
        </field>
    </group>
</include>
