<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Swissup_Ajaxpro/js/is-ajaxpro-request" xsi:type="string">Swissup_Ajaxpro/js/is-ajaxpro-request</item>
                            <item name="Swissup_Ajaxpro/js/modal-manager" xsi:type="string">Swissup_Ajaxpro/js/modal-manager</item>
                            <item name="Swissup_Ajaxpro/js/ajaxpro" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/breeze/ajaxpro</item>
                                <item name="import" xsi:type="array">
                                    <item name="modal-manager" xsi:type="string">Swissup_Ajaxpro/js/modal-manager</item>
                                </item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/modal" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/breeze/modal</item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/ajaxcian-data-post" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/breeze/data-post</item>
                                <item name="mixins" xsi:type="array">
                                    <item name="dataPost" xsi:type="string">dataPost</item>
                                </item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/catalog-add-to-cart" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/breeze/catalog-add-to-cart</item>
                                <item name="mixins" xsi:type="array">
                                    <item name="catalogAddToCart" xsi:type="string">catalogAddToCart</item>
                                </item>
                                <item name="import" xsi:type="array">
                                    <item name="catalog-product-view" xsi:type="string">Swissup_Ajaxpro/js/catalog-product-view</item>
                                </item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/get-product-view-request" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/get-product-view-request</item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/catalog-product-view" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/catalog-product-view</item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/quick-view" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/quick-view</item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="0">ajaxpro/main/quickView</param>
                                </item>
                                <item name="import" xsi:type="array">
                                    <item name="loader" xsi:type="string">Swissup_Ajaxpro/js/breeze/loader</item>
                                </item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/view/minicart" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/breeze/minicart</item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEqual">
                                    <param name="0">ajaxpro/main/cartHandle:ajaxpro_popup_minicart,ajaxpro_popup_checkout_cart_index_fixes</param>
                                </item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/view/minicart/override" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/view/minicart/override</item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="0">ajaxpro/main/overrideMinicart</param>
                                </item>
                            </item>
                            <item name="Swissup_Ajaxpro/js/view/floatingcart" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Ajaxpro/js/breeze/floatingcart</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                                <item name="enabled" xsi:type="helper" helper="Swissup\Breeze\Helper\Config::isEnabled">
                                    <param name="path">ajaxpro/main/floatingCart</param>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="breeze.container">
            <block class="Swissup\Breeze\Block\HtmlTemplate" name="Swissup_Ajaxpro_floatingcart_content" template="Swissup_Ajaxpro::breeze/floatingcart/content.html"/>
        </referenceContainer>
    </body>
</page>
