<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="swissup_chatgptassistant_prompt" resource="default" engine="innodb" comment="ChatGPT Assistant Prompts">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true" comment="Entity ID"/>
        <column xsi:type="boolean" name="status" nullable="false" comment="Prompt Status"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Prompt Name"/>
        <column xsi:type="text" name="text" nullable="false" comment="Prompt Text"/>
        <column xsi:type="varchar" name="field_ids" nullable="true" length="1024" comment="Fields IDs"/>
        <column xsi:type="varchar" name="default_field_id" nullable="true" length="100" comment="Default Field ID"/>
        <column xsi:type="timestamp" name="added_at" on_update="false" nullable="false" default="CURRENT_TIMESTAMP" comment="Date of Prompt Creation"/>
        <column xsi:type="timestamp" name="modified_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP" comment="Date of Prompt Modification"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
