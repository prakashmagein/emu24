            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <backend_model>Swissup\ThemeEditorArgentobreezeBusiness\Model\Config\Backend\Footer\Copyright</backend_model>
        </field>
        <field id="footerBottomToolbar_links" translate="label" type="select" sortOrder="4500" showInDefault="1" showInWebsite="1" showInStore="1" canRestore="1">
            <label>Remove Footer Links</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <backend_model>Swissup\ThemeEditorArgentobreezeBusiness\Model\Config\Backend\Footer\Links</backend_model>
