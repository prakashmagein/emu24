<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <!-- Breeze-based themes -->
                    <item name="cms" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Swissup_Highlight/js/carousel-breeze-theme" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Highlight/js/breeze/carousel-breeze-theme</item>
                                <item name="load" xsi:type="array">
                                    <item name="onReveal" xsi:type="array">
                                        <item name="0" xsi:type="string">[data-mage-init*="Swissup_Highlight/js/carousel-breeze-theme"]</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                    <!-- Compatibility with Luma-based Argento themes -->
                    <item name="swiper" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Swissup_Highlight/js/carousel" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_Highlight/js/breeze/carousel</item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
