<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">attributepages_page_form.attributepages_page_form_data_source</item>
            <item name="deps" xsi:type="string">attributepages_page_form.attributepages_page_form_data_source</item>
        </item>
        <item name="label" xsi:type="string" translate="true">General Information</item>
        <item name="config" xsi:type="array">
            <item name="dataScope" xsi:type="string">data</item>
            <item name="namespace" xsi:type="string">attributepages_page_form</item>
        </item>
        <item name="layout" xsi:type="array">
            <item name="navContainerName" xsi:type="string">left</item>
            <item name="type" xsi:type="string">tabs</item>
        </item>
        <item name="buttons" xsi:type="array">
            <item name="back" xsi:type="array">
                <item name="name" xsi:type="string">back</item>
                <item name="label" xsi:type="string" translate="true">Back</item>
                <item name="class" xsi:type="string">back</item>
                <item name="url" xsi:type="string">*/*/</item>
            </item>
            <!-- <item name="delete" xsi:type="array">
                <item name="name" xsi:type="string">delete</item>
                <item name="label" xsi:type="string" translate="true">Delete</item>
                <item name="class" xsi:type="string">delete</item>
                <item name="url" xsi:type="url" path="*/*/delete">
                    <param name="_current">1</param>
                </item>
            </item> -->
            <item name="save" xsi:type="array">
                <item name="name" xsi:type="string">save</item>
                <item name="label" xsi:type="string" translate="true">Save</item>
                <item name="class" xsi:type="string">primary</item>
                <item name="data_attribute" xsi:type="array">
                    <item name="mage-init" xsi:type="array">
                        <item name="buttonAdapter" xsi:type="array">
                            <item name="actions" xsi:type="array">
                                <item name="0" xsi:type="array">
                                    <item name="targetName" xsi:type="string">attributepages_page_form.areas</item>
                                    <item name="actionName" xsi:type="string">save</item>
                                    <item name="params" xsi:type="array">
                                        <item name="0" xsi:type="boolean">false</item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
                <item name="class_name" xsi:type="string">Magento\Ui\Component\Control\SplitButton</item>
                <item name="options" xsi:type="array">
                    <item name="0" xsi:type="array">
                        <item name="id_hard" xsi:type="string">save_and_close</item>
                        <item name="label" xsi:type="string" translate="true"><![CDATA[Save & Close]]></item>
                        <item name="data_attribute" xsi:type="array">
                            <item name="mage-init" xsi:type="array">
                                <item name="buttonAdapter" xsi:type="array">
                                    <item name="actions" xsi:type="array">
                                        <item name="0" xsi:type="array">
                                            <item name="targetName" xsi:type="string">attributepages_page_form.areas</item>
                                            <item name="actionName" xsi:type="string">save</item>
                                            <item name="params" xsi:type="array">
                                                <item name="0" xsi:type="boolean">true</item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                    <item name="1" xsi:type="array">
                        <item name="id_hard" xsi:type="string">save_and_duplicate</item>
                        <item name="label" xsi:type="string" translate="true"><![CDATA[Save & Duplicate]]></item>
                        <item name="data_attribute" xsi:type="array">
                            <item name="mage-init" xsi:type="array">
                                <item name="buttonAdapter" xsi:type="array">
                                    <item name="actions" xsi:type="array">
                                        <item name="0" xsi:type="array">
                                            <item name="targetName" xsi:type="string">attributepages_page_form.areas</item>
                                            <item name="actionName" xsi:type="string">save</item>
                                            <item name="params" xsi:type="array">
                                                <item name="0" xsi:type="boolean">true</item>
                                                <item name="1" xsi:type="array">
                                                    <item name="back" xsi:type="string">duplicate</item>
                                                </item>
                                            </item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </item>
                    </item>
                </item>
            </item>
        </item>
    </argument>
    <dataSource name="attributepages_page_form_data_source">
        <argument name="dataProvider" xsi:type="configurableObject">
            <argument name="class" xsi:type="string">Swissup\Attributepages\Ui\DataProvider\Form\PageDataProvider</argument>
            <argument name="name" xsi:type="string">attributepages_page_form_data_source</argument>
            <argument name="primaryFieldName" xsi:type="string">entity_id</argument>
            <argument name="requestFieldName" xsi:type="string">entity_id</argument>
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="submit_url" xsi:type="url" path="*/*/save"/>
                </item>
            </argument>
        </argument>
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
    </dataSource>
    <fieldset name="general">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">General</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="attribute_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
        <field name="entity_id">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="visible" xsi:type="boolean">false</item>
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
        <field name="use_for_attribute_page">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Enabled</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>
        <field name="name">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Name</item>
                    <item name="notice" xsi:type="string" translate="true">Used to identify page in backend grid</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="notice" xsi:type="string" translate="true">Available Placeholders: {{var attribute.label}}</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                    <item name="default" xsi:type="string">{{var attribute.label}}</item>
                </item>
            </argument>
        </field>
        <field name="identifier">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">URL Key</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <field name="store_id">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Ui\Component\Listing\Column\Cms\Options</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">int</item>
                    <item name="label" xsi:type="string" translate="true">Store View</item>
                    <item name="formElement" xsi:type="string">multiselect</item>
                    <item name="default" xsi:type="string">0</item>
                    <item name="validation" xsi:type="array">
                        <item name="required-entry" xsi:type="boolean">true</item>
                    </item>
                </item>
            </argument>
        </field>
        <fieldset name="attribute_fieldset">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Attribute Information</item>
                    <item name="dataScope" xsi:type="boolean">false</item>
                </item>
            </argument>
            <field name="attribute_label">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Attribute</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="elementTmpl" xsi:type="string">ui/form/element/html</item>
                    </item>
                </argument>
            </field>
            <field name="hide_from_layered_navigation">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="label" xsi:type="string" translate="true">Hide from layered navigation</item>
                        <item name="notice" xsi:type="string" translate="true">When enabled, attribute will be hidden from layered navigation at all category pages</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
            </field>
        </fieldset>
    </fieldset>
    <fieldset name="content">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Content</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="page_title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Page Title</item>
                    <item name="formElement" xsi:type="string">input</item>
                </item>
            </argument>
        </field>
        <field name="content">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Content</item>
                    <item name="formElement" xsi:type="string">wysiwyg</item>
                    <item name="wysiwyg" xsi:type="boolean">true</item>
                </item>
            </argument>
        </field>
        <fieldset name="seo_fieldset">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Search Engine Optimization</item>
                    <item name="dataScope" xsi:type="boolean">false</item>
                </item>
            </argument>
            <field name="meta_title">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Meta Title</item>
                        <item name="formElement" xsi:type="string">input</item>
                    </item>
                </argument>
            </field>
            <field name="meta_keywords">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Meta Keywords</item>
                        <item name="formElement" xsi:type="string">textarea</item>
                        <item name="rows" xsi:type="number">5</item>
                    </item>
                </argument>
            </field>
            <field name="meta_description">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Meta Description</item>
                        <item name="formElement" xsi:type="string">textarea</item>
                        <item name="rows" xsi:type="number">5</item>
                    </item>
                </argument>
            </field>
        </fieldset>
    </fieldset>
    <fieldset name="display_settings">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Display Settings</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="root_template">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Model\Page\Source\PageLayout</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Layout</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                </item>
            </argument>
        </field>
        <field name="layout_update_xml">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Layout Update XML</item>
                    <item name="formElement" xsi:type="string">textarea</item>
                    <item name="rows" xsi:type="number">5</item>
                </item>
            </argument>
        </field>
        <field name="display_mode">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Swissup\Attributepages\Model\Config\Source\DisplayMode</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Display Mode</item>
                    <item name="formElement" xsi:type="string">select</item>
                </item>
            </argument>
        </field>
        <fieldset name="options_listing_settings">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="label" xsi:type="string">Options listing settings</item>
                    <item name="dataScope" xsi:type="boolean">false</item>
                </item>
            </argument>
            <field name="column_count">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Columns Count</item>
                        <item name="notice" xsi:type="string" translate="true">1 â€” 8 columns are supported</item>
                        <item name="formElement" xsi:type="string">input</item>
                        <item name="default" xsi:type="string">4</item>
                        <item name="validation" xsi:type="array">
                            <item name="required-entry" xsi:type="boolean">true</item>
                        </item>
                    </item>
                </argument>
            </field>
            <field name="group_by_first_letter">
                <argument name="data" xsi:type="array">
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">boolean</item>
                        <item name="label" xsi:type="string" translate="true">Group Options by First Letter</item>
                        <item name="notice" xsi:type="string" translate="true">When enabled, options are sorted by title only.</item>
                        <item name="formElement" xsi:type="string">checkbox</item>
                        <item name="prefer" xsi:type="string">toggle</item>
                        <item name="valueMap" xsi:type="array">
                            <item name="true" xsi:type="number">1</item>
                            <item name="false" xsi:type="number">0</item>
                        </item>
                        <item name="default" xsi:type="number">0</item>
                    </item>
                </argument>
            </field>
            <field name="listing_mode">
                <argument name="data" xsi:type="array">
                    <item name="options" xsi:type="object">Swissup\Attributepages\Model\Config\Source\ListingMode</item>
                    <item name="config" xsi:type="array">
                        <item name="dataType" xsi:type="string">text</item>
                        <item name="label" xsi:type="string" translate="true">Listing Mode</item>
                        <item name="formElement" xsi:type="string">select</item>
                        <item name="default" xsi:type="string">link</item>
                    </item>
                </argument>
            </field>
            <container name="dimensions">
                <argument name="data" xsi:type="array">
                    <item name="type" xsi:type="string">group</item>
                    <item name="config" xsi:type="array">
                        <item name="breakLine" xsi:type="boolean">false</item>
                        <item name="label" xsi:type="string" translate="true"></item>
                        <item name="dataScope" xsi:type="boolean">false</item>

                        <item name="component" xsi:type="string">Swissup_Attributepages/js/form/components/visible-on-option/group</item>
                        <item name="valuesForOptions" xsi:type="array">
                            <item name="image" xsi:type="string">image</item>
                        </item>
                        <item name="imports" xsi:type="array">
                            <item name="toggleVisibility" xsi:type="string">${ $.provider }:data.listing_mode</item>
                        </item>
                    </item>
                </argument>
                <field name="image_width">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalClasses" xsi:type="string">admin__field-small</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="label" xsi:type="string" translate="true">Image Width, px</item>
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="validation" xsi:type="array">
                                <item name="validate-number" xsi:type="boolean">true</item>
                                <item name="validate-zero-or-greater" xsi:type="boolean">true</item>
                            </item>
                            <item name="default" xsi:type="number">200</item>
                        </item>
                    </argument>
                </field>
                <field name="image_height">
                    <argument name="data" xsi:type="array">
                        <item name="config" xsi:type="array">
                            <item name="additionalClasses" xsi:type="string">admin__field-group-show-label admin__field-small</item>
                            <item name="dataType" xsi:type="string">text</item>
                            <item name="label" xsi:type="string" translate="true">Image Height, px</item>
                            <item name="formElement" xsi:type="string">input</item>
                            <item name="validation" xsi:type="array">
                                <item name="validate-number" xsi:type="boolean">true</item>
                                <item name="validate-zero-or-greater" xsi:type="boolean">true</item>
                            </item>
                            <item name="default" xsi:type="number">150</item>
                        </item>
                    </argument>
                </field>
            </container>
        </fieldset>
    </fieldset>
    <fieldset name="option_page">
        <argument name="data" xsi:type="array">
            <item name="config" xsi:type="array">
                <item name="label" xsi:type="string">Option Pages Display Settings</item>
                <item name="dataScope" xsi:type="string">data</item>
            </item>
        </argument>
        <field name="options_title">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Title</item>
                    <item name="notice" xsi:type="string" translate="true">Available Placeholders: {{var option.label}}, {{var attribute.label}}</item>
                    <item name="formElement" xsi:type="string">input</item>
                    <item name="default" xsi:type="string">{{var option.label}}</item>
                </item>
            </argument>
        </field>
        <field name="use_layered_navigation">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">boolean</item>
                    <item name="label" xsi:type="string" translate="true">Use Layered Navigation</item>
                    <item name="formElement" xsi:type="string">checkbox</item>
                    <item name="prefer" xsi:type="string">toggle</item>
                    <item name="valueMap" xsi:type="array">
                        <item name="true" xsi:type="number">1</item>
                        <item name="false" xsi:type="number">0</item>
                    </item>
                    <item name="default" xsi:type="number">1</item>
                </item>
            </argument>
        </field>
        <field name="options_root_template">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Magento\Cms\Model\Page\Source\PageLayout</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Layout</item>
                    <item name="formElement" xsi:type="string">select</item>
                    <item name="caption" xsi:type="string" translate="true">-- Please Select --</item>
                </item>
            </argument>
        </field>
        <field name="options_display_mode">
            <argument name="data" xsi:type="array">
                <item name="options" xsi:type="object">Swissup\Attributepages\Model\Config\Source\DisplayMode</item>
                <item name="config" xsi:type="array">
                    <item name="dataType" xsi:type="string">text</item>
                    <item name="label" xsi:type="string" translate="true">Display Mode</item>
                    <item name="formElement" xsi:type="string">select</item>
                </item>
            </argument>
        </field>
        <container name="conditions_apply_to">
            <htmlContent name="html_content">
                <argument name="block" xsi:type="object">Swissup\Attributepages\Block\Adminhtml\Page\Edit\Tab\OptionPageFilters</argument>
            </htmlContent>
        </container>
    </fieldset>
</form>
