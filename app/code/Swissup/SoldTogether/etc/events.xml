<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="sales_model_service_quote_submit_success">
        <observer name="soldtogether_new_order_relation_observer" instance="Swissup\SoldTogether\Observer\CreateOrderRelationsObserver"/>
    </event>
    <event name="catalog_product_get_final_price">
        <observer name="swissup_soldtogether" instance="Swissup\SoldTogether\Observer\FrontFinalPriceObserver" />
    </event>
    <event name="sales_quote_item_collection_products_after_load">
        <observer name="swissup_soldtogether" instance="Swissup\SoldTogether\Observer\Quote\UpdateProductsPrices" />
    </event>
    <event name="sales_quote_product_add_after">
        <observer name="swissup_soldtogether" instance="Swissup\SoldTogether\Observer\Quote\UpdateItemBuyRequest" />
    </event>
    <event name="sales_quote_remove_item">
        <observer name="swissup_soldtogether" instance="Swissup\SoldTogether\Observer\Quote\CollectTotalsOnRemoveItem" />
    </event>
</config>
