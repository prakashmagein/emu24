<?xml version="1.0"?>
<include xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_include.xsd">
    <group id="relations" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="0" showInStore="0">
        <label>Relations Management</label>
        <field id="order_on_order_create" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Update 'Frequently Bought...' relations from new orders</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <comment>This creates new relations as well as updates existing.</comment>
        </field>
        <field id="customer_on_order_create" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Update 'Customers Who Bought...' relations from new orders</label>
            <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
            <comment>This creates new relations as well as updates existing.</comment>
        </field>
        <field id="cron_frequency" translate="label" type="select" sortOrder="30" showInDefault="1" showInWebsite="0" showInStore="0">
            <label>Check for new orders...</label>
            <source_model>Swissup\SoldTogether\Model\Config\Source\CronFrequency</source_model>
            <backend_model>Swissup\SoldTogether\Model\Config\Backend\CronFrequency</backend_model>
        </field>
        <field id="order_not_older_than_x_days" translate="label" type="text" sortOrder="40" showInDefault="1" showInWebsite="1" showInStore="1">
            <label>Orders should not be older than x days</label>
        </field>
    </group>
</include>
