<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="Swissup_ProLabels/js/prolabels" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_ProLabels/js/prolabels</item>
                                <item name="import" xsi:type="array">
                                    <item name="0" xsi:type="string">Swissup_ProLabels/js/viewModel/labels</item>
                                    <item name="1" xsi:type="string">Swissup_ProLabels/js/renderLabels</item>
                                </item>
                                <item name="load" xsi:type="array">
                                    <item name="onReveal" xsi:type="array">
                                        <item name="0" xsi:type="string">.product-item:has([data-mage-init*="prolabels"])</item>
                                        <item name="1" xsi:type="string">.product-item:has(.prolabels-wrapper)</item>
                                        <item name="2" xsi:type="string">.breeze-gallery .main-image-wrapper</item>
                                    </item>
                                </item>
                            </item>
                            <item name="Swissup_ProLabels/js/breeze/recentProducts-mixin" xsi:type="array">
                                <item name="path" xsi:type="string">Swissup_ProLabels/js/breeze/recentProducts-mixin</item>
                                <item name="import" xsi:type="array">
                                    <item name="0" xsi:type="string">Swissup_ProLabels/js/prolabels</item>
                                </item>
                                <item name="mixins" xsi:type="array">
                                    <item name="0" xsi:type="string">Swissup_Breeze/js/recent-products</item> <!-- deprecated name -->
                                    <item name="1" xsi:type="string">Swissup_Breeze/js/components/recent-products</item>
                                </item>
                            </item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>

        <referenceContainer name="breeze.container">
            <block class="Swissup\Breeze\Block\HtmlTemplate" template="Swissup_ProLabels::labels.html"/>
        </referenceContainer>
    </body>
</page>
