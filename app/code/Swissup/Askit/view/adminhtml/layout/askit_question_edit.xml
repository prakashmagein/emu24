<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="editor"/>
    <body>
        <referenceContainer name="admin.scope.col.wrap" htmlClass="admin__old" />
        <referenceContainer name="content">
            <uiComponent name="askit_question_form"/>
            <referenceBlock name="askit_question_form">
                <block class="Magento\Ui\Component\Layout\Tabs\TabWrapper" name="answers_tab">
                    <arguments>
                        <argument name="is_ajax_loaded" xsi:type="boolean">true</argument>
                        <argument name="tab_label" xsi:type="string" translate="true">Answers</argument>
                        <argument name="tab_url" xsi:type="url" path="*/answer/grid">
                            <param name="_current">1</param>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Ui\Component\Layout\Tabs\TabWrapper" name="products_tab">
                    <arguments>
                        <argument name="is_ajax_loaded" xsi:type="boolean">true</argument>
                        <argument name="tab_label" xsi:type="string" translate="true">Assigned Products</argument>
                        <argument name="tab_url" xsi:type="url" path="*/assign/products/form_name/askit_question_form">
                            <param name="_current">1</param>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Ui\Component\Layout\Tabs\TabWrapper" name="pages_tab">
                    <arguments>
                        <argument name="is_ajax_loaded" xsi:type="boolean">true</argument>
                        <argument name="tab_label" xsi:type="string" translate="true">Assigned Pages</argument>
                        <argument name="tab_url" xsi:type="url" path="*/assign/pages/form_name/askit_question_form">
                            <param name="_current">1</param>
                        </argument>
                    </arguments>
                </block>
                <block class="Magento\Ui\Component\Layout\Tabs\TabWrapper" name="categories_tab">
                    <arguments>
                        <argument name="is_ajax_loaded" xsi:type="boolean">true</argument>
                        <argument name="tab_label" xsi:type="string" translate="true">Assigned Categories</argument>
                        <argument name="tab_url" xsi:type="url" path="*/assign/categories/form_name/askit_question_form">
                            <param name="_current">1</param>
                        </argument>
                    </arguments>
                </block>
            </referenceBlock>
        </referenceContainer>
    </body>
</page>
