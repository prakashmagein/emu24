<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_list_toolbar_pager">
            <block class="Magento\Framework\View\Element\Template" name="product_list_toolbar_pager.view_all_link" as="viewAllLink" ifconfig="swissup_seopager/general/enabled">
                <arguments>
                    <argument name="template" xsi:type="string">Swissup_SeoPager::pager/link/view-all.phtml</argument>
                    <argument name="link_label" translate="true" xsi:type="string">All products</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
