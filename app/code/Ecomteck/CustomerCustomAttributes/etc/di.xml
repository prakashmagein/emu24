<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">
    <preference for="\Magento\Quote\Model\Quote\Address\CustomAttributeListInterface"
                type="\Ecomteck\CustomerCustomAttributes\Model\Quote\Address\CustomAttributeList" />
    <preference for="Magento\Customer\Model\Address\CustomAttributeListInterface"
                type="\Ecomteck\CustomerCustomAttributes\Model\Quote\Address\CustomAttributeList" />
    <preference for="Magento\Customer\Model\Indexer\Source"
                type="\Ecomteck\CustomerCustomAttributes\Model\Customer\Indexer\Source" />
    <type name="Ecomteck\CustomerCustomAttributes\Helper\Data">
        <arguments>
            <argument name="customerAddress" xsi:type="object">Ecomteck\CustomerCustomAttributes\Helper\Address\Proxy</argument>
            <argument name="customerCustomer" xsi:type="object">Ecomteck\CustomerCustomAttributes\Helper\Customer\Proxy</argument>
        </arguments>
    </type>
    <type name="Ecomteck\CustomerCustomAttributes\Model\ResourceModel\Sales\Order">
        <arguments>
            <argument name="connectionName" xsi:type="string">sales</argument>
        </arguments>
    </type>
    <type name="Ecomteck\CustomerCustomAttributes\Model\ResourceModel\Sales\Order\Address">
        <arguments>
            <argument name="connectionName" xsi:type="string">sales</argument>
        </arguments>
    </type>
    <type name="Magento\Quote\Model\Quote\Address\ToOrderAddress">
        <plugin name="convertQuoteAddressToOrderAddress" type="Ecomteck\CustomerCustomAttributes\Model\Plugin\ConvertQuoteAddressToOrderAddress"/>
    </type>
    <type name="Magento\Quote\Model\Quote\Address">
        <plugin name="convertQuoteAddressToCustomerAddress" type="Ecomteck\CustomerCustomAttributes\Model\Plugin\ConvertQuoteAddressToCustomerAddress"/>
    </type>
    <preference for="Ecomteck\CustomerCustomAttributes\Api\CustomerAttributeRepositoryInterface" type="Ecomteck\CustomerCustomAttributes\Model\CustomerAttributeRepository"/>
    <preference for="Ecomteck\CustomerCustomAttributes\Api\Data\AttributeInterface"
                type="Ecomteck\CustomerCustomAttributes\Model\Data\Attribute" />
</config>
