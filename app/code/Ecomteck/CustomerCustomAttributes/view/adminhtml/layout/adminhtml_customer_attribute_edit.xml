<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="admin-2columns-left" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="scope_switcher"/>
    <body>
        <referenceContainer name="content">
            <block class="Ecomteck\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit" name="magento_customercustomattributes_attribute_edit"/>
        </referenceContainer>
        <referenceContainer name="left">
            <block class="Ecomteck\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tabs" name="magento_customercustomattributes_attribute_edit_tabs">
                <block class="Ecomteck\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tab\Main" name="magento_customercustomattributes_attribute_edit_tab_general"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">general</argument>
                    <argument name="block" xsi:type="string">magento_customercustomattributes_attribute_edit_tab_general</argument>
                </action>
                <block class="Ecomteck\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Tab\Options" name="magento_customercustomattributes_attribute_edit_tab_options"/>
                <action method="addTab">
                    <argument name="name" xsi:type="string">options</argument>
                    <argument name="block" xsi:type="string">magento_customercustomattributes_attribute_edit_tab_options</argument>
                </action>
            </block>
        </referenceContainer>
        <referenceContainer name="js">
            <block class="Ecomteck\CustomerCustomAttributes\Block\Adminhtml\Customer\Attribute\Edit\Js" template="attribute/js.phtml"/>
        </referenceContainer>
    </body>
</page>
