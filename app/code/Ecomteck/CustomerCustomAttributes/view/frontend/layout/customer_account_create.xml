<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_form_template_handle"/>
    <body>
        <referenceBlock name="head.components">
            <block class="Magento\Framework\View\Element\Js\Components" name="customercustomattributes_account_create_head_components" template="Ecomteck_CustomerCustomAttributes::js/components.phtml"/>
        </referenceBlock>
        <referenceBlock name="customer_form_register">
            <action method="setTemplate">
                <argument name="template" xsi:type="string">Ecomteck_CustomerCustomAttributes::/customer/form/register.phtml</argument>
            </action>
            <block class="Ecomteck\CustomerCustomAttributes\Block\Form" template="form/userattributes.phtml" name="customer_form_user_attributes">
                <action method="setFormCode">
                    <argument name="code" xsi:type="string">customer_account_create</argument>
                </action>
                <action method="setEntityModelClass">
                    <argument name="code" xsi:type="string">Magento\Customer\Model\Customer</argument>
                </action>
            </block>
            <block class="Ecomteck\CustomerCustomAttributes\Block\Form" template="form/userattributes.phtml" name="customer_form_address_user_attributes">
                <action method="setFormCode">
                    <argument name="code" xsi:type="string">customer_register_address</argument>
                </action>
                <action method="setEntityModelClass">
                    <argument name="code" xsi:type="string">Magento\Customer\Model\Address</argument>
                </action>
            </block>
        </referenceBlock>
    </body>
</page>
