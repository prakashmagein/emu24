<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <move element="product.info.stock.sku" destination="product.info.main" before="product.info.price"/>
        <!-- <move element="product.info.sku" destination="product.info.main" before="-"/> -->

        <referenceContainer name="product.info.main">
            <container name="product.info.overview.wrapper" htmlTag="div" htmlClass="overview-wrapper" before="product.info"/>
        </referenceContainer>
        <move element="product.info.review" destination="product.info.overview.wrapper" before="-"/>
        <move element="product.info.overview" destination="product.info.overview.wrapper"/>
    </body>
</page>
