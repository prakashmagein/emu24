<?xml version="1.0"?>
<view xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:Config/etc/view.xsd">
    <media>
        <images module="Magento_Catalog">
            <!-- Product grid listing -->
            <image id="category_page_grid" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="category_page_grid-srcset-1" type="small_image">
                <width>285</width>
                <height>285</height>
            </image>
            <image id="category_page_grid-srcset-2" type="small_image">
                <width>308</width>
                <height>308</height>
            </image>
            <image id="category_page_grid-srcset-3" type="small_image">
                <width>350</width>
                <height>350</height>
            </image>
            <image id="category_page_grid-srcset-4" type="small_image">
                <width>446</width>
                <height>446</height>
            </image>
            <image id="category_page_grid-srcset-5" type="small_image">
                <width>570</width>
                <height>570</height>
            </image>

            <!-- Product list listing -->
            <image id="category_page_list" type="small_image">
                <width>350</width>
                <height>350</height>
            </image>
            <image id="category_page_list-srcset-1" type="small_image">
                <width>270</width>
                <height>270</height>
            </image>
            <image id="category_page_list-srcset-2" type="small_image">
                <width>400</width>
                <height>400</height>
            </image>
            <image id="category_page_list-srcset-3" type="small_image">
                <width>520</width>
                <height>520</height>
            </image>
            <image id="category_page_list-srcset-4" type="small_image">
                <width>700</width>
                <height>700</height>
            </image>

            <!-- Product page image -->
            <image id="product_page_image_large" type="image"/>
            <image id="product_page_image_medium" type="image">
                <width>675</width>
                <height>675</height>
            </image>
            <image id="product_page_image_medium-srcset-1" type="image">
                <width>792</width>
                <height>792</height>
            </image>
            <image id="product_page_image_medium-srcset-2" type="image">
                <width>1040</width>
                <height>1040</height>
            </image>
            <image id="product_page_image_medium-srcset-3" type="image">
                <width>1350</width>
                <height>1350</height>
            </image>

            <image id="product_page_image_small" type="thumbnail">
                <width>110</width>
                <height>110</height>
            </image>
            <image id="product_page_image_small-srcset-1" type="thumbnail">
                <width>220</width>
                <height>220</height>
            </image>
            <image id="product_swatch_image_small" type="thumbnail">
                <width>110</width>
                <height>110</height>
            </image>

            <!-- Shopping cart -->
            <image id="cart_page_product_thumbnail" type="small_image">
                <width>220</width>
                <height>220</height>
            </image>
            <image id="cart_page_product_thumbnail-srcset-1" type="small_image">
                <width>440</width>
                <height>440</height>
            </image>

            <!-- These lists always render image with width/2 -->
            <image id="recently_viewed_products_grid_content_widget" type="small_image">
                <width>446</width>
                <height>446</height>
            </image>
            <image id="recently_compared_products_grid_content_widget" type="small_image">
                <width>446</width>
                <height>446</height>
            </image>

            <!-- These lists use category_page_grid fallback. Not need to declare srcset for them -->
            <image id="related_products_list" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="new_products_content_widget_grid" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="upsell_products_list" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="wishlist_thumbnail" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="cart_cross_sell_products" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="product_swatch_image_medium" type="small_image">
                <width>223</width>
                <height>223</height>
            </image>
            <image id="customer_account_product_review_page" type="image">
                <width>223</width>
                <height>223</height>
            </image>
        </images>
    </media>
    <vars module="Magento_Catalog">
        <var name="gallery">
            <var name="nav">dots</var> <!-- false/thumbs/dots -->
        </var>
        <var name="magnifier">
            <var name="enabled">true</var>
        </var>
    </vars>
    <vars module="Argento_Theme">
        <var name="listing">
            <var name="grid">
                <var name="actions">
                    <var name="position">bottom</var>
                </var>
            </var>
        </var>
    </vars>
    <vars module="Swissup_Breeze">
        <var name="sizes">
            <var name="category_page_grid"><![CDATA[
                (min-width: 1360px) 223px,
                (min-width: 1280px) calc((100vw - 220px - 6rem - 0.625rem * 3 - 0.875rem * 8) / 4),
                (min-width: 1024px) calc((100vw - 220px - 3rem - 0.625rem * 2 - 0.875rem * 6) / 3),
                (min-width: 768px) calc((100vw - 180px - 2rem - 0.625rem * 1 - 0.875rem * 4) / 2),
                (min-width: 640px) calc((100vw - 1rem - 0.625rem * 2 - 0.875rem * 6) / 3),
                calc((100vw - 1rem - 0.625rem - 0.875rem * 4) / 2)
            ]]></var>
            <var name="category_page_grid-1column"><![CDATA[
                (min-width: 1360px) 286px,
                (min-width: 1280px) calc((100vw - 4rem - 0.625rem * 3 - 0.875rem * 8) / 4),
                (min-width: 1024px) calc((100vw - 1rem - 0.625rem * 3 - 0.875rem * 8) / 4),
                (min-width: 768px) calc((100vw - 1rem - 0.625rem * 2 - 0.875rem * 6) / 3),
                (min-width: 640px) calc((100vw - 1rem - 0.625rem * 2 - 0.875rem * 6) / 3),
                calc((100vw - 1rem - 0.625rem - 0.875rem * 4) / 2)
            ]]></var>
            <var name="category_page_grid-3columns"><![CDATA[
                (min-width: 1360px) 225px,
                (min-width: 1280px) calc((100vw - 440px - 8rem - 0.625rem * 2 - 0.875rem * 6) / 3),
                (min-width: 1024px) calc((100vw - 440px - 5rem - 0.625rem * 1 - 0.875rem * 4) / 2),
                (min-width: 768px) calc((100vw - 180px - 2rem - 0.625rem * 1 - 0.875rem * 4) / 2),
                (min-width: 640px) calc((100vw - 1rem - 0.625rem * 2 - 0.875rem * 6) / 3),
                calc((100vw - 1rem - 0.625rem - 0.875rem * 4) / 2)
            ]]></var>
            <var name="category_page_grid-cms-full-width">use:category_page_grid-1column</var>

            <var name="category_page_list"><![CDATA[
                (min-width: 1360px) 350px,
                (min-width: 1024px) calc((100vw - 220px - 4rem) * 0.35),
                (min-width: 768px) calc((100vw - 180px - 2.75rem) * 0.35),
                calc((100vw - 1.75rem) * 0.35)
            ]]></var>
            <var name="category_page_list-1column"><![CDATA[
                (min-width: 1024px) 350px,
                calc((100vw - 1.75rem) * 0.35)
            ]]></var>
            <var name="category_page_list-3columns"><![CDATA[
                (min-width: 1360px) 273px,
                (min-width: 1024px) calc((100vw - 440px - 7rem) * 0.35),
                (min-width: 768px) calc((100vw - 180px - 2.75rem) * 0.35),
                calc((100vw - 1.75rem) * 0.35)
            ]]></var>
            <var name="category_page_list-cms-full-width">use:category_page_list-1column</var>

            <var name="product_page_image_medium"><![CDATA[
                (min-width: 1360px) 675px,
                (min-width: 1280px) calc((100vw - 7.5rem) * 0.57),
                (min-width: 1024px) calc((100vw - 2rem) * 0.57),
                (min-width: 768px) calc((100vw - 2rem) / 2),
                calc(100vw - 1rem)
            ]]></var>
            <var name="product_page_image_small">110px</var>
            <var name="cart_page_product_thumbnail"><![CDATA[
                (min-width: 1150px) 220px,
                (min-width: 1024px) 140px,
                (min-width: 768px) 120px,
                (min-width: 640px) 152px,
                (min-width: 480px) 95px,
                70px
            ]]></var>
        </var>
    </vars>
</view>