<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="breeze.js">
            <arguments>
                <argument name="bundles" xsi:type="array">
                    <item name="default" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="js/breeze/argento-blank" xsi:type="array">
                                <item name="path" xsi:type="string">js/breeze/argento-blank</item>
                                <item name="autoload" xsi:type="boolean">true</item>
                            </item>
                            <item name="marquee3k" xsi:type="array">
                                <item name="path" xsi:type="string">js/breeze/marquee3k</item>
                                <item name="load" xsi:type="array">
                                    <item name="onRequire" xsi:type="boolean">true</item>
                                </item>
                            </item>
                        </item>
                    </item>
                    <item name="product" xsi:type="array">
                        <item name="items" xsi:type="array">
                            <item name="js/components/photo-in-description" xsi:type="string">js/breeze/photo-in-description</item>
                        </item>
                    </item>
                </argument>
            </arguments>
        </referenceBlock>
    </body>
</page>
